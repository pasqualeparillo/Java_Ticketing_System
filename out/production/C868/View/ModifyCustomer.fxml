<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="340.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ModifyCustomer">
    <children>
        <Label layoutX="29.0" layoutY="61.0" text="Name:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <TextField fx:id="customerName" layoutX="29.0" layoutY="79.0" prefWidth="282.0" style="-fx-background-color: #E5E5E5;" />
        <Label layoutX="29.0" layoutY="111.0" text="Email:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="customerEmail" layoutX="29.0" layoutY="129.0" prefWidth="282.0" style="-fx-background-color: #E5E5E5;" />
        <Label layoutX="29.0" layoutY="162.0" text="Phone:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="customerPhone" layoutX="29.0" layoutY="180.0" prefWidth="282.0" style="-fx-background-color: #E5E5E5;" />
        <Label layoutX="29.0" layoutY="212.0" text="Department:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Button layoutX="227.0" layoutY="300.0" mnemonicParsing="false" onAction="#saveCustomer" style="-fx-background-color: #9147FF;" text="Save" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
        <Button layoutX="274.0" layoutY="300.0" mnemonicParsing="false" onAction="#exitToMain" style="-fx-background-color: #EB0400;" text="Exit" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
        <Label layoutX="121.0" layoutY="14.0" text="Add Customer:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
      <ComboBox fx:id="customerDepartment" layoutX="29.0" layoutY="230.0" prefHeight="26.0" prefWidth="282.0" />
    </children>
</AnchorPane>
